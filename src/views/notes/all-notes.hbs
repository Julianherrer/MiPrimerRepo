 <div class="card mx-auto col-md-3">
        <div class="card-body mx-auto">
            <h1>Hello {{name}}</h1>
            <p class="lead mx-auto">Create new note</p>
            <a href="/notes/add" class="btn btn-primary mx-auto"> Create One!</a>
        </div>
    </div>

<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card mt-4">
            <div class="card-header">
                <h4 class="card-title d-flex justify-content-beetween align-items-center"> 
                    
                    {{title}} <div class="icono ms-auto"> <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a> </div>
                </h4>

            </div>
                <div class="card-body">
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
                <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger w-100" type="submit"> Delete </button>
                </form>
                </div> 
        </div>
    </div>
    
    {{/each}}
</div>