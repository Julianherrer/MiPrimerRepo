{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/each}}

{{#if success_msg}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
        {{success_msg}}
    <button type="button" class="btn-close" data-bs-dismiss="alert">
                <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/if}}


<div class="row">
    <div class="col-md-3 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group mt-2">
                        <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
                    </div>
                    <div class="form-group mt-2">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group mt-2">
                        <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                    </div>
                     <div class="form-group mt-2">
                        <input type="password" class="form-control" name="confirm_password" placeholder="confirm_Password" value="{{confirm_password}}">
                    </div>
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-block">
                            SignUp
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>